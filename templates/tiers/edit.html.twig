{% extends 'base.html.twig' %}

{% block title %}Modifier {{ tiers.nom }} - {{ parent() }}{% endblock %}
{% block page_title %}Modifier le client{% endblock %}

{% block page_actions %}
    <a href="{{ path('tiers_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour à la liste
    </a>
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pencil"></i> Modifier le client : {{ tiers.nom }}
                </h5>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('tiers_edit', {'id': tiers.id}) }}" novalidate>
                    <input type="hidden" name="_token" value="{{ csrf_token('edit_tiers' ~ tiers.id) }}">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="nom" class="form-label">Nom *</label>
                                <input type="text" id="nom" name="nom" class="form-control" placeholder="Nom du client" value="{{ (data.nom ?? tiers.nom) ?? '' }}">
                                {% if errors.nom is defined %}
                                    <div class="text-danger small">{{ errors.nom|join(', ') }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" id="email" name="email" class="form-control" placeholder="email@exemple.com" value="{{ (data.email ?? tiers.email) ?? '' }}">
                                {% if errors.email is defined %}
                                    <div class="text-danger small">{{ errors.email|join(', ') }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="telephone" class="form-label">Téléphone</label>
                                <input type="text" id="telephone" name="telephone" class="form-control" placeholder="Numéro de téléphone" value="{{ (data.telephone ?? tiers.telephone) ?? '' }}">
                                {% if errors.telephone is defined %}
                                    <div class="text-danger small">{{ errors.telephone|join(', ') }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="numTva" class="form-label">Numéro TVA</label>
                                <input type="text" id="numTva" name="numTva" class="form-control" placeholder="Numéro de TVA intracommunautaire" value="{{ (data.numTva ?? tiers.numTva) ?? '' }}">
                                {% if errors.numTva is defined %}
                                    <div class="text-danger small">{{ errors.numTva|join(', ') }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="adresse" class="form-label">Adresse</label>
                        <textarea id="adresse" name="adresse" class="form-control" rows="3" placeholder="Adresse complète">{{ (data.adresse ?? tiers.adresse) ?? '' }}</textarea>
                        {% if errors.adresse is defined %}
                            <div class="text-danger small">{{ errors.adresse|join(', ') }}</div>
                        {% endif %}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Enregistrer les modifications
                        </button>
                        <a href="{{ path('tiers_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

