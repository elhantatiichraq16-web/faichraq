{% extends 'base.html.twig' %}

{% block title %}Dashboard - {{ parent() }}{% endblock %}
{% block page_title %}Dashboard{% endblock %}

{% block body %}
<div class="row">
    <!-- Statistiques -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Chiffre d'affaires du mois
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            {{ chiffre_affaires|number_format(2, ',', ' ') }} MAD
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-currency-exchange text-primary" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Factures en attente
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            {{ nombre_factures_non_payees }}
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-clock-history text-warning" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Factures ce mois
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            {{ dernieres_factures|length }}
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-receipt text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Taux de paiement
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            {% set total_factures = dernieres_factures|length %}
                            {% set factures_payees = dernieres_factures|filter(f => f.etat == 'Payée')|length %}
                            {% if total_factures > 0 %}
                                {{ ((factures_payees / total_factures) * 100)|number_format(1) }}%
                            {% else %}
                                0%
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-percent text-info" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Actions rapides -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Actions rapides</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a href="{{ path('facture_new') }}" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle"></i> Nouvelle facture
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="{{ path('tiers_new') }}" class="btn btn-success w-100">
                            <i class="bi bi-person-plus"></i> Nouveau client
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="{{ path('facture_index') }}" class="btn btn-info w-100">
                            <i class="bi bi-list-ul"></i> Voir les factures
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="{{ path('tiers_index') }}" class="btn btn-warning w-100">
                            <i class="bi bi-people"></i> Voir les clients
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dernières factures -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Dernières factures</h5>
                <a href="{{ path('facture_index') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
            </div>
            <div class="card-body">
                {% if dernieres_factures|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Référence</th>
                                    <th>Client</th>
                                    <th>Date</th>
                                    <th>État</th>
                                    <th>Total TTC</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for facture in dernieres_factures %}
                                    <tr>
                                        <td>
                                            <strong>{{ facture.reference }}</strong>
                                        </td>
                                        <td>{{ facture.client.nom }}</td>
                                        <td>{{ facture.dateFacture|date('d/m/Y') }}</td>
                                        <td>
                                            {% set badge_class = facture.etat == 'Payée' ? 'success' : (facture.etat == 'Validée' ? 'primary' : 'secondary') %}
                                            <span class="badge bg-{{ badge_class }} status-badge">
                                                {{ facture.etat }}
                                            </span>
                                        </td>
                                        <td>
                                            <strong>{{ facture.totalTtc|number_format(2, ',', ' ') }} {{ facture.devise }}</strong>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('facture_show', {'id': facture.id}) }}" class="btn btn-outline-primary" title="Voir">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('facture_pdf', {'id': facture.id}) }}" class="btn btn-outline-danger" title="PDF">
                                                    <i class="bi bi-file-pdf"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">Aucune facture trouvée</p>
                        <a href="{{ path('facture_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Créer la première facture
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

