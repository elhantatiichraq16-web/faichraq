{% extends 'base.html.twig' %}

{% block title %}Memes - {{ app_name }}{% endblock %}
{% block page_title %}Memes{% endblock %}

{% block page_actions %}
    <a href="{{ path('meme_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Nouveau meme
    </a>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        <form method="get" class="row g-2 mb-3">
            <div class="col-auto">
                <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Rechercher...">
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
            </div>
        </form>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {% for meme in memes %}
                <div class="col">
                    <div class="card h-100">
                        <img src="{{ meme.imageUrl }}" class="card-img-top" alt="{{ meme.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ meme.title }}</h5>
                            <p class="card-text">{{ meme.caption }}</p>
                        </div>
                        <div class="card-footer text-muted">
                            Ajouté le {{ meme.createdAt|date('d/m/Y H:i') }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">Aucun meme trouvé.</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
